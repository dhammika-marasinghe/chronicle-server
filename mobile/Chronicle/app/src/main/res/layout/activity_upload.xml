<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.illusionbox.www.chronicle.UploadActivity"
    android:background="@mipmap/background">

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/text_name"
        android:hint="Chronicle Name"
        android:textColorHint="@color/abc_primary_text_disable_only_material_dark"
        android:textColor="@color/abc_primary_text_material_dark"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginBottom="39dp"
        android:background="@drawable/fillform"
        android:layout_above="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:background="@drawable/fillform"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uplaodProgress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/upload_done"
        android:scaleType="fitCenter"
        android:background="@drawable/uploadinactive"
        android:layout_marginBottom="149dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/textView"
        android:background="@drawable/navbar"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/imageView4">

        <ImageView
            android:layout_width="93.6dp"
            android:layout_height="71.6dp"
            android:id="@+id/imageView3"
            android:background="@drawable/branding"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="31.6dp"
            android:layout_height="31.6dp"
            android:id="@+id/button4"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <Button
            android:layout_width="31.6dp"
            android:layout_height="31.6dp"
            android:id="@+id/button5"
            android:background="@drawable/profile"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_alignTop="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:background="@drawable/lineseperation"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/uplaodProgress"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:background="@drawable/navbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="66.4dp"
            android:layout_height="43.2dp"
            android:id="@+id/button6"
            android:background="@drawable/narrateactive"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="33.6dp"
            android:layout_height="20.8dp"
            android:id="@+id/button7"
            android:background="@drawable/feedinactive"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_alignTop="@+id/button8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="31.2dp"
            android:layout_height="31.6dp"
            android:id="@+id/button8"
            android:background="@drawable/ongoinginactive"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@drawable/lineseperation"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
